<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.proyectoclinica.controllers.ListaPacientesControlador">


    <Label text="Lista de Pacientes" textFill="#0f0f0f">
        <font>
            <Font size="20.0" />
        </font>
    </Label>


    <TableView fx:id="tablaPacientes" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="clIdentificacion" text="Identificación" />
            <TableColumn fx:id="clNombre" text="Nombre" />
            <TableColumn fx:id="clTelefono" text="Teléfono" />
            <TableColumn fx:id="clCorreo" text="Correo" />
            <TableColumn fx:id="clSuscripcion" text="Suscripción" />
        </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
    </TableView>


</VBox>
